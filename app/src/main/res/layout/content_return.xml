<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_return"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/data_redemption_app_bg_final_1080x1920_v2"
    tools:context="com.billaway.lyfepoints.views.ReturnActivity">


    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/tower_icon_white"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Enter"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/button_normal"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/returnPhone"
        android:id="@+id/enter"
        android:layout_marginBottom="10dp"
        android:onClick="enterOnClick"/>

    <TextView
        android:text="Please enter your 4 digit PIN"
        android:textColor="@color/textColorPrimary"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView6" />

    <com.billaway.lyfepoints.views.PinEntryEditText
        android:id="@+id/returnPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:imeOptions="actionDone"
        android:layout_below="@+id/textView6"/>

    <TextView
        android:text="Forgot your PIN? Click here"
        android:textColor="@color/textColorPrimary"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/returnPin"
        android:layout_centerHorizontal="true"
        android:id="@+id/recoverPin" />

    <TextView
        android:text="If different phone number click here"
        android:textColor="@color/textColorPrimary"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/accountReset" />

    <TextView
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/textColorPrimary"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/accountReset"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/returnPhone" />


</RelativeLayout>
